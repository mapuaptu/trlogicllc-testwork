{
  "editor": {
    "rules": [80, 120],
    "semanticHighlighting": {
      "enabled": true
    }
  },
  "files": {
    "eol": "\n",
    "insertFinalNewline": true,
    "trimTrailingWhitespace": true
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "all",
    "semi": true,
    "singleQuote": true,
    "printWidth": 80,
    "arrowParens": "always"
  },
  "vetur": {
    "format": {
      "defaultFormatter": {
        "html": "js-beautify-html",
        "css": "prettier",
        "postcss": "prettier",
        "scss": "prettier",
        "less": "prettier",
        "js": "prettier",
        "ts": "prettier",
        "stylus": "stylus-supremacy"
      },
      "defaultFormatterOptions": {
        "js-beautify-html": {
          "wrap_attributes": "force-expand-multiline",
          "wrap_line_length": 80
        }
      }
    }
  }
}
